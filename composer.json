{
  "name": "flowd/phirewall",
  "description": "A PHP Firewall and rate limiter based on PSR-7 and PSR-15 middleware (safelists, blocklists, throttles, fail2ban)",
  "type": "library",
  "license": [
    "LGPL-3.0-or-later",
    "proprietary"
  ],
  "authors": [
    {
      "name": "Sascha Egerer",
      "email": "sascha.egerer@flowd.de",
      "role": "Developer",
      "homepage": "https://flowd.de"
    }
  ],
  "require": {
    "php": ">=8.2",
    "psr/http-message": "^1.1 || ^2.0",
    "psr/http-server-middleware": "^1.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-factory": "^1.1",
    "psr/simple-cache": "^3.0",
    "psr/event-dispatcher": "^1.0"
  },
  "suggest": {
    "predis/predis": "Optional: use RedisCache for distributed counters",
    "ext-apcu": "Optional: use ApcuCache for fast in-process counters (enable with apc.enable_cli=1 for CLI)"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^1.12",
    "friendsofphp/php-cs-fixer": "^3.89",
    "infection/infection": "^0.29",
    "rector/rector": "^1.2",
    "nyholm/psr7": "^1.8"
  },
  "autoload": {
    "psr-4": {
      "Flowd\\Phirewall\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
        "Flowd\\Phirewall\\Tests\\": "tests/"
      }
    },
  "scripts": {
    "phpunit": "XDEBUG_MODE=coverage vendor/bin/phpunit --color=always",
    "phpstan": "vendor/bin/phpstan",
    "rector:check": "vendor/bin/rector --dry-run",
    "rector:fix": "vendor/bin/rector",
    "cs:check": "vendor/bin/php-cs-fixer fix --diff --dry-run --verbose",
    "cs:fix": "vendor/bin/php-cs-fixer fix --diff --verbose",
    "infection": "vendor/bin/infection --threads=4 --logger-html=.build/infection.html --min-msi=0 --min-covered-msi=0",
    "infection:coverage": "XDEBUG_MODE=coverage vendor/bin/infection --threads=4 --logger-html=.build/infection.html --initial-tests-php-options=\"-dxdebug.mode=coverage\" --min-msi=0 --min-covered-msi=0",
    "fix": [
        "@rector:fix",
        "@cs:fix"
    ],
    "test": [
        "@rector:check",
        "@cs:check",
        "@phpunit",
        "@phpstan"
    ]
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": false
    }
  }
}
